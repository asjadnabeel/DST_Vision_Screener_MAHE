<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/nexus7"
    android:orientation="horizontal"
    tools:context=".Root_Welcome">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >


            <TextView
                android:id="@+id/maheTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:text="Developed By"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@android:color/holo_blue_bright"
                android:textSize="26sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/maheimg"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="100sp"
                android:background="@drawable/mahe"/>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >


            <TextView
                android:id="@+id/dstTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:text="Funded By"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@android:color/holo_blue_bright"
                android:textSize="26sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/dstimg"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="100sp"
                android:background="@drawable/dst"/>




        </LinearLayout>






    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >






                <TextView
                    android:id="@+id/compLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:layout_gravity="center"
                    android:text="Technically Supported by Specvin Pvt Ltd             "
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/holo_green_light"
                    android:textSize="24sp"
                    android:textStyle="bold" />

















        </LinearLayout>











    </LinearLayout>








    <include layout="@layout/content_welcome" />



</RelativeLayout>
